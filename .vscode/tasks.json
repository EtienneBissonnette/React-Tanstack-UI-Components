{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open All Terminals",
      "dependsOn": [
        "claude",
        "dev",
        "git"
      ],
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "claude",
      "type": "shell",
      "command": "claude",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "git",
      "type": "shell",
      "command": "$SHELL",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "close": true
      },
      "problemMatcher": []
    }
  ]
}